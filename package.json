{
  "name": "gitflow-store",
  "displayName": "GitFlow Store",
  "description": "Manage git worktrees from a sidebar panel. Create, switch, and clean up worktrees without the terminal.",
  "version": "0.1.2",
  "publisher": "AmirMakir",
  "license": "MIT",
  "icon": "resources/gitflow_store.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmirMakir/Gitflowstore"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "worktree",
    "worktrees",
    "branch",
    "ai",
    "claude",
    "parallel",
    "workflow"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitflow-store",
          "title": "GitFlow Store",
          "icon": "resources/gitflow-store.svg"
        }
      ]
    },
    "views": {
      "gitflow-store": [
        {
          "type": "webview",
          "id": "gitflowStore.dashboard",
          "name": "Worktrees",
          "contextualTitle": "GitFlow Store"
        }
      ]
    },
    "commands": [
      {
        "command": "gitflowStore.createWorktree",
        "title": "Create Worktree",
        "category": "GitFlow Store",
        "icon": "$(add)"
      },
      {
        "command": "gitflowStore.quickSwitch",
        "title": "Quick Switch Worktree",
        "category": "GitFlow Store"
      },
      {
        "command": "gitflowStore.openWorktree",
        "title": "Open Worktree in New Window",
        "category": "GitFlow Store",
        "icon": "$(window)"
      },
      {
        "command": "gitflowStore.removeWorktree",
        "title": "Remove Worktree",
        "category": "GitFlow Store",
        "icon": "$(trash)"
      },
      {
        "command": "gitflowStore.refreshWorktrees",
        "title": "Refresh Worktrees",
        "category": "GitFlow Store",
        "icon": "$(refresh)"
      },
      {
        "command": "gitflowStore.showCleanup",
        "title": "Cleanup Manager",
        "category": "GitFlow Store",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitflowStore.createWorktree",
          "when": "view == gitflowStore.dashboard",
          "group": "navigation@1"
        },
        {
          "command": "gitflowStore.refreshWorktrees",
          "when": "view == gitflowStore.dashboard",
          "group": "navigation@2"
        },
        {
          "command": "gitflowStore.showCleanup",
          "when": "view == gitflowStore.dashboard",
          "group": "navigation@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gitflowStore.quickSwitch",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w",
        "when": "gitflowStore.hasWorktrees"
      }
    ],
    "configuration": {
      "title": "GitFlow Store",
      "properties": {
        "gitflowStore.autoSetup.copyFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".env",
            ".env.local"
          ],
          "description": "Files to copy from main worktree when creating a new worktree"
        },
        "gitflowStore.autoSetup.symlinkDirs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Directories to symlink (e.g., node_modules) instead of copying"
        },
        "gitflowStore.autoSetup.postCreateCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Shell commands to run after worktree creation (e.g., npm install)"
        },
        "gitflowStore.autoSetup.openInNewWindow": {
          "type": "boolean",
          "default": true,
          "description": "Open new worktree in a new VS Code window by default"
        },
        "gitflowStore.worktreeBasePath": {
          "type": "string",
          "default": "",
          "description": "Base directory for new worktrees. Empty = sibling to main repo."
        },
        "gitflowStore.pollIntervalSeconds": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "Interval in seconds for polling remote status (ahead/behind)"
        },
        "gitflowStore.staleThresholdDays": {
          "type": "number",
          "default": 14,
          "description": "Worktrees with no commits for this many days are marked stale"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "concurrently \"npm run watch:ext\" \"npm run watch:webview\"",
    "watch:ext": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "watch:webview": "cd webview-ui && npm run dev",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "vitest": "^3.0.0"
  }
}
